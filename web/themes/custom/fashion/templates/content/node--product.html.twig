<div class="block product-page-shop">
    <a class="back-link" href="product-overvirew.html"><i class="icon font-ico-arrow-left"></i> Back to products</a>
    <div class="product-image">
        {#{{ breakpoint() }}#}

        <div class="product-thumbnails">
            {% for photo in product.photos %}
            {% if loop.first %}
                <div class="thumb selected">
            {% else %}
                <div class="thumb ">
            {% endif %}
                    <a href="#">
                        <img src="{{ photo['url'] }}" alt="">
                    </a>
                    <span class="thumb-size">thumb size <span>70X86</span></span>

                </div>
             {% endfor %}
            </div>
            <div class="img-wrap">
                {% if product.photos[0] %}
                <img class="full-width" src="{{ product.photos[0]['url'] }}" alt="{{ photo['title'] }}">
                <span class="img-ratio">
                    <span>image size <span>690x862</span></span>
                    <span>Ratio <span>800x1000</span></span>
				</span>
                {% endif %}
            </div>
        </div>


        <div class="product-details">
            <div class="block">
                <h1 class="product-name">{{ label }}</h1>
                <span class="product-price">{{ product.productPrice.mainPrice }},<sup>{{ product.productPrice.subPrice }} {{ product.productPrice.suffix }}</sup></span>
                <div class="product-description">
                    <div class="tabbed">
                        <ul class="tabs clearfix">
                            <li class="">
                                <span class="tab-head">{{ content.field_product_title_description }}</span>
                            </li>
                            <li class="">
                                <span class="tab-head">{{ content.field_composition_title }}</span>
                            </li>
                            <li class="active">
                                <span class="tab-head">{{ content.field_artist_title }}</span>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab">
                                <p>{{ content.field_product_description }}</p>
                            </div>
                            <div class="tab">
                                <p>{{ content.field_composition_description }}</p>
                            </div>
                            <div class="tab active">
                                <p>{{ content.field_artist_description }} </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
